<% merchandises.forEach((merchandise)=>{%>

<%- include('../single/mini-card', {      dataKey : merchandise._id, 
                                          title : merchandise.name, 
                                          img :  merchandise.name.image('merchandises','png'),  
                                          subTitle: (merchandise.rarityTitle.length > 8).if(word.LVL, word.LEVEL).concat(merchandise.level), 
                                          badgeText: merchandise.coins.abs().format(word.FREE), 
                                          badgeImg:  merchandise.coins ? "/img/coin.png" :null,
                                          imageClass: 'weapon-img',
                                          imgColor : merchandise.color,
                                          extraSubTitle : merchandise.rarityTitle,
                                        }); %>

<%- include('../placeholders/mini-card'); %>

<% }); %>