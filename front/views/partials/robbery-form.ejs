<div class="row align-items-center">
  <h6 class="card-title">
    <%=place.name%> Robbery Attempt
  </h6 s>

  <div class="input-group">
    <span class="form-control">Coins Reward</span>
    <span class="input-group-text"><img class="mini-img" src="/img/coin.png" alt=""></span>
    <span class="input-group-text">
      + <%=new Intl.NumberFormat().format(place.coinsReward)%>
    </span>
  </div>


  <div class="input-group">
    <span class="form-control">Respect Increase</span>
    <span class="input-group-text"><img class="mini-img" src="/img/respect-star.png" alt=""></span>

    <span class="input-group-text">
      + <%=new Intl.NumberFormat().format(place.respect)%>
    </span>
  </div>

  <div class="input-group">
    <span class="form-control">Stamina Cost</span>
    <span class="input-group-text"><img class="mini-img" src="/img/stamina.png" alt=""></span>
    <span class="input-group-text">
      <%=place.staminaCost%>%
    </span>
  </div>

  <div class="input-group">
    <span class="form-control">Success Chance</span>
    <span class="input-group-text"><img class="mini-img" src="/img/lucky.png" alt=""></span>

    <span class="input-group-text">
      <%=place.successChance%>%
    </span>
  </div>
</div>



<div class="col-12">


  <%- include('../single/button', {buttonId: 'submit', buttonText: 'Carry Out Theft', noStamina: player.stamina < place.staminaCost, arrested: player.arrested, loadingButton: true}); %>


</div>
</div>