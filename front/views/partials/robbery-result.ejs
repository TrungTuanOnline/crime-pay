<div class="row align-items-center">
    <div class="col text-end">

        <h6 class="card-title" id="result-title">
            I'm watching you!
        </h6>

        <p class="card-text" id="result-message">
            <%=thief.arrested? "You're paying your time in prison." : "Behave yourself and I'll leave you alone." %>
        </p>

        <ul id="result-list" class=" list-group list-group-flush">
            <li class="list-group-item">
                <span id="result-coins">0</span> Coins
            </li>

            <li class="list-group-item">
                <span id="result-respect">0</span> Respect
            </li>

            <li class="list-group-item">
                <span id="result-intelligence">0</span> Intelligence
            </li>
            <li class="list-group-item">
                <span id="result-dexterity">0</span> Dexterity
            </li>
            <li class="list-group-item">
                <span id="result-strength">0</span> Strength
            </li>


        </ul>
    </div>
    <div class="col" style="width: min-content;">
        <img src="/img/police.png" id="result-img" class="card-img-top medium-img" alt="Police">

        <div id="result-prison" style="display:<%=thief.arrested ? '-webkit-box' : 'none'%>">
            <a href="/prison" class="btn btn-primary">Prison</a>

            <blockquote class="blockquote mb-0">
                <footer class="blockquote-footer" id="result-arrest-release">
                    Released <%=moment(thief.arrestRelease).calendar()%>
                </footer>
            </blockquote>
        </div>
    </div>
</div>