<div class="card">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#equip" type="button">Equip</button>
      </li>
      <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#sell" type="button">Sell</button>
      </li>
    </ul>
  </div>

  <div class="card-body tab-content">
    <div class="tab-pane fade show active" id="equip">

      <h6 class="card-title">
        <%=text.INVENTORY.WANNA_EQUIP.format(weapon.name)%>
      </h6>

      <%- include('../single/buttons/button-group', {id: 'equip', 
                                       text: word.EQUIP, 
                                       arrested: player.arrested, 
                                       loadingButton: true,
                                       }); %>

    </div>
    <div class="tab-pane fade" id="sell">


      <h6 class="card-title">
        <%=text.INVENTORY.WANNA_SELL.format(weapon.name)%>
      </h6>

      <%- include('../single/input-item', { text: word.PRICE,  icon: 'coin', inputType : 'number', placeholder : 'Price'}); %>


      <%- include('../single/buttons/button-group', {id: 'sell', 
                                       text: word.SELL, 
                                       arrested: player.arrested, 
                                       loadingButton: true,
                                       }); %>

    </div>
  </div>
</div>