<%const isEqquiped = player.isEquipped(weapon);%>

<div class="card">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#equip-tab" type="button">Equip</button>
      </li>
      <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#sell-tab" type="button">Sell</button>
      </li>
    </ul>
  </div>

  <div class="card-body tab-content">
    <div class="tab-pane fade show active" id="equip-tab">

      <h6 class="card-title">
        <%=text.INVENTORY.EQUIP_TITLE.format(weapon.name)%>
      </h6>

      <div class="button-holder">
        <%- include('../single/buttons/button', {id: 'equip',  text: isEqquiped.if(word.DROP, word.EQUIP), loadingButton: true}); %>
        <%- include('../single/buttons/button', {id: 'burn', colorClass: 'btn-danger', text: word.BURN, loadingButton: true, disabled: isEqquiped}); %>
      </div>
    </div>

    <div class="tab-pane fade" id="sell-tab">
      <h6 class="card-title">
        <%=text.INVENTORY.WANNA_SELL.format(weapon.name)%>
      </h6>

      <%- include('../single/input-item', { text: word.PRICE,  icon: 'coin', inputType : 'number', placeholder : 'Price'}); %>


      <%- include('../single/buttons/button-group', {id: 'sell', 
                                       text: word.SELL, 
                                       arrested: player.arrested, 
                                       loadingButton: true,
                                       }); %>

    </div>
  </div>
</div>