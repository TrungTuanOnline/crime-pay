<head>
  <link rel="stylesheet" href="/css/player-status.css">
  <script src="/js/player-status.js"></script>
</head>

<div class="card" style="width: 18rem;">
  <img src="/img/thief-head.jpg" class="card-img-top player-head" />

  <span class="badge rounded-pill player-badge <%=player.arrested?'bg-danger' : ''%>">
    <img src="/img/<%=player.arrested? 'lock' : 'respect'%>.png" class="player-badge-img">
    <span id="player-badge-text" data-def="<%=word.ARRESTED%>">
      <%=player.arrested? word.ARRESTED : player.respect.format()%>
    </span>
  </span>

  <div class="card-body">
    <h5 class="card-title">
      <%=player.name%>
      <span class="coin-display float-right">
        <img class="mini-img" src="/img/coin.png">
        <span id="status-coins">
          <%=player.coins.format()%>
        </span>
      </span>

    </h5>

    <%- include('../single/progress-bar', { textId: 'status-stamina-percent', barId:'status-stamina', colorClass: 'bg-success', title: word.STAMINA, value: player.stamina, tooltipText : text.ROBBERY.STAMINA_TOOLTIP }); %>
    <%- include('../single/progress-bar', { textId: 'status-intoxication-percent', barId:'status-intoxication', colorClass: 'bg-purple', title: word.INTOXICATION, value: player.intoxication, tooltipText : text.ROBBERY.INTOXICATION_TOOLTIP }); %>
  </div>

  <div class="card-body">
    <h6 class="label-sub-title"> <%=word.ATTRIBUTES%></h6>
  </div>
  <ul class="list-group list-group-flush">
    <%- include('../single/section-line', { id: 'status-intelligence', text: word.INTELLIGENCE, value: player.intelligence.format() }); %>
    <%- include('../single/section-line', { id: 'status-dexterity', text: word.DEXTERITY, value: player.dexterity.format() }); %>
    <%- include('../single/section-line', { id: 'status-strength', text: word.STRENGTH, value: player.strength.format() }); %>
  </ul>

  <div class="card-body">
    <h6 class="label-sub-title" style="margin-top: .5rem!important;">
      <%=word.WEAPONS%>
    </h6>

    <% for(let [index, weapon] of player.weapons.entries() || []){ %>
    <img class="player-img" style="width: 120px;" src="<%=weapon.img%>">

    <%} %>

  </div>


</div>