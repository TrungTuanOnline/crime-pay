<% weapons?.forEach((weapon)=>{%>

<%- include('../single/big-card', {       dataKey : weapon._id, 
                                          dataExtra : weapon.class.toName(), 
                                          title : weapon.name.ellipse(17), 
                                          img :  weapon.name.image('merchandises','png'),  
                                          subTitle: word.LEVEL.concat(weapon.level), 
                                          badgeText: weapon.price ? word.MARKET : player.isEquipped(weapon).if(word.EQUIPPED),
                                          imageClass: 'weapon-img',
                                          extraTitle :  weapon.rarityTitle,
                                          extraSubTitle : weapon.price ? word.COINS.joinBefore(weapon.price.format(), 1) : weapon.class,
                                          imgColor : weapon.color,
                                          sectionData: weapon.bundle,
                                          customSectionLayout: '../partials/weapon-card-section-lines'
                                        }); %>

<%- include('../placeholders/big-card', {sectionLines: 3}); %>

<% }); %>