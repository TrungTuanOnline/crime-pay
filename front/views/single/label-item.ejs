<%if (locals?.showOnlyIf !== false){%>
<div class="input-group">

  <span class="form-control"><%=text%></span>

  <%if (locals?.icon){%>
  <span class="input-group-text">
    <img class="mini-img" src="/img/<%=icon%>.png" />
  </span>
  <%}%>

  <span id="<%=locals?.id%>" class="input-group-text">
  <%=value%>
  </span>

</div>
<%}%>